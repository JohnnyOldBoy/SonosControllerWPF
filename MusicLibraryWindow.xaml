<Window x:Class="SonosController.MusicLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SonosController"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="Music Library" Height="768" Width="1024"
        d:DataContext="{d:DesignInstance local:MusicLibraryViewModel}">
    <Grid>
        <TabControl>
            <TabItem Header="Albums">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Column="0" Name="AlbumsView" 
                              ItemsSource="{Binding Albums}"
                              Grid.IsSharedSizeScope="True" 
                              IsReadOnly="True" 
                              AutoGenerateColumns="False"
                              SelectedItem="{Binding SelectedAlbum}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Album" Binding="{Binding AlbumName}"/>
                            <DataGridTextColumn Header="Artist" Binding="{Binding Album.AlbumArtist}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Grid.Column="1" Name="AlbumTracksView"
                              ItemsSource="{Binding AlbumTracksCollectionView}"
                              Grid.IsSharedSizeScope="True" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Track Number" Binding="{Binding Track.TrackNumber}"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Track.Title}"/>
                            <DataGridTextColumn Header="Artist" Binding="{Binding Track.ArtistName}"/>
                            <DataGridTextColumn Header="Genre" Binding="{Binding Track.Genres}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Artists" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TreeView Name="ArtistsTreeView"
                        ItemsSource="{Binding Artists}">
                        <TreeView.Resources>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsSelected"
                                        Value="{Binding IsSelected}"/>
                            </Style>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding AlbumNamePairs}"
                                                      DataType="{x:Type viewModels:ArtistViewModel}">
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate DataType="{x:Type viewModels:AlbumViewModel}">
                                        <TextBlock Text="{Binding AlbumName}" />
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                                <TextBlock Text="{Binding Artist.ArtistName}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <DataGrid Grid.Column="1" Name="ArtistAlbumTracksView"
                              Grid.IsSharedSizeScope="True" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Track Number" Binding="{Binding Track.TrackNumber}"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Track.Title}"/>
                            <DataGridTextColumn Header="Artist" Binding="{Binding Track.ArtistName}"/>
                            <DataGridTextColumn Header="Genre" Binding="{Binding Track.Genres}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Tracks" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Name="TracksView" 
                              ItemsSource="{Binding TracksOC}"
                              Grid.IsSharedSizeScope="True" 
                              IsReadOnly="True" 
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Track Number" Binding="{Binding Track.TrackNumber}"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Track.Title}"/>
                            <DataGridTextColumn Header="Artist" Binding="{Binding Track.ArtistName}"/>
                            <DataGridTextColumn Header="Genre" Binding="{Binding Track.Genres}"/>
                            <DataGridTextColumn Header="Album" Binding="{Binding AlbumName}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>
            <TabItem Header="Genres" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid  Background="#FFE5E5E5">
                    <ListBox Name="listBox4" VerticalAlignment="Center" HorizontalAlignment="Center" ItemsSource="{Binding ArtistsListOC}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Expander Header="{Binding Artist.ArtistName}" HorizontalAlignment="Left" VerticalAlignment="Top" Name="Expander1" IsExpanded="False">
                                    <Expander>
                                        <BindingMode >
                                            
                                        </BindingMode></Expander>
                                </Expander>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
