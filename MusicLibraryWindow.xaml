<Window x:Class="SonosController.MusicLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SonosController"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="Music Library" Height="768" Width="1024">
    <Grid>
        <TabControl>
            <TabItem Header="Albums">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Column="0" Name="AlbumsView" 
                              ItemsSource="{Binding AlbumsOC}"
                              Grid.IsSharedSizeScope="True" 
                              IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="AlbumsView_SelectionChanged" Loaded="AlbumsView_Loaded_1">
                    </DataGrid>
                    <DataGrid Grid.Column="1" Name="AlbumTracksView"
                              ItemsSource="{Binding AlbumTracksCV}"
                              Grid.IsSharedSizeScope="True" 
                              IsReadOnly="True">
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Artists" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <TreeView Name="ArtistTreeView"
                              ItemsSource="{Binding ArtistsList}" Loaded="ArtistTreeView_Loaded"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tracks" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Name="TracksView" 
                              ItemsSource="{Binding TracksOC}"
                              Grid.IsSharedSizeScope="True" 
                              IsReadOnly="True" Loaded="TracksView_Loaded">
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
